<Window x:Class="Diplom_Project.Views.ReviewsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diplom_Project.Views"
        mc:Ignorable="d"
        Title="Отзывы" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и информация о пользователе -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Отзывы" FontSize="20" FontWeight="Bold"/>
            <TextBlock x:Name="UserInfoText" Margin="20,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Список отзывов -->
        <ListView x:Name="ReviewsListView" Grid.Row="1" Margin="0,0,0,10">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Пользователь" Width="150" DisplayMemberBinding="{Binding User.FullName}"/>
                    <GridViewColumn Header="Оценка" Width="60" DisplayMemberBinding="{Binding Rating}"/>
                    <GridViewColumn Header="Отзыв" Width="300" DisplayMemberBinding="{Binding Content}"/>
                    <GridViewColumn Header="Дата" Width="120" DisplayMemberBinding="{Binding CreatedAt, StringFormat={}{0:dd.MM.yyyy}}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Форма добавления отзыва -->
        <Border Grid.Row="2" BorderBrush="LightGray" BorderThickness="0,1,0,0" Padding="0,10,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Добавить отзыв" FontWeight="Bold" Margin="0,0,0,5"/>

                <TextBox Grid.Row="1" x:Name="ReviewContentTextBox" 
                         TextWrapping="Wrap" AcceptsReturn="True" 
                         VerticalScrollBarVisibility="Auto" MinHeight="60"/>

                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <ComboBox x:Name="RatingComboBox" Width="60" Margin="0,0,10,0" SelectedIndex="4"
                              SelectionChanged="RatingComboBox_SelectionChanged">
                        <ComboBoxItem Content="1"/>
                        <ComboBoxItem Content="2"/>
                        <ComboBoxItem Content="3"/>
                        <ComboBoxItem Content="4"/>
                        <ComboBoxItem Content="5"/>
                    </ComboBox>
                    <Button Content="Отправить отзыв" Width="120" Height="30" Click="AddReviewButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>