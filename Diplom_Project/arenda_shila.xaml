<Window x:Class="Diplom_Project.arenda_zhilya"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diplom_Project"
        mc:Ignorable="d"
        Title="Аренда жилья" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        Background="#FF0F0F0F">

    <Window.Resources>
        <!-- Стиль для карточек жилья -->
        <Style x:Key="HousingCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#FF1A1A1A"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="15"/>
            <Setter Property="Width" Value="280"/>
            <Setter Property="Height" Value="330"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="3" Color="#40000000"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для кнопок -->
        <Style x:Key="RentButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF3A6EA5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF4D8FD6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для заголовков карточек -->
        <Style x:Key="CardTitleStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="15,15,15,5"/>
        </Style>

        <!-- Стиль для описания -->
        <Style x:Key="CardDescriptionStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="15,0,15,10"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <!-- Стиль для цены -->
        <Style x:Key="CardPriceStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FF3A6EA5"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="15,0,15,5"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Основной контент -->
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Шапка с логотипом и заголовком -->
            <Border Grid.Row="0" Background="#FF1A1A1A" Padding="15">
                <StackPanel Orientation="Horizontal">
                    <Border Width="50" Height="50" CornerRadius="5" Background="White" 
                MouseLeftButtonDown="Logo_Click" Cursor="Hand">
                        <Image Source="/Image/image (1).jpeg" Stretch="Uniform"/>
                    </Border>
                    <TextBlock Text="Аренда жилья" 
                  Foreground="White" 
                  FontSize="24" 
                  FontWeight="Bold"
                  Margin="250,0,0,0"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Фильтры поиска -->
            <Border Grid.Row="1" Background="#FF151515" Padding="10">
                <StackPanel>
                    <!-- Список вариантов жилья -->
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <WrapPanel HorizontalAlignment="Center" Name="HousingItemsPanel">
                            <!-- Отель -->
                            <Border Style="{StaticResource HousingCardStyle}">
                                <StackPanel>
                                    <Image Source="/Images/hotel.jpg" Height="150" Stretch="UniformToFill"/>
                                    <TextBlock Text="Горный Отель Премиум" Style="{StaticResource CardTitleStyle}"/>
                                    <TextBlock Text="Комфортабельные номера с видом на склоны" Style="{StaticResource CardDescriptionStyle}"/>
                                    <TextBlock Text="8500 руб./ночь" Style="{StaticResource CardPriceStyle}"/>
                                    <Button Content="Добавить в корзину" 
                                            Style="{StaticResource RentButtonStyle}"
                                            Click="AddToCart_Click"
                                            Tag="8500"/>
                                </StackPanel>
                            </Border>

                            <!-- Шале -->
                            <Border Style="{StaticResource HousingCardStyle}">
                                <StackPanel>
                                    <Image Source="/Images/chalet.jpg" Height="150" Stretch="UniformToFill"/>
                                    <TextBlock Text="Уютное Шале у Подножия" Style="{StaticResource CardTitleStyle}"/>
                                    <TextBlock Text="Традиционное деревянное шале с камином" Style="{StaticResource CardDescriptionStyle}"/>
                                    <TextBlock Text="12000 руб./ночь" Style="{StaticResource CardPriceStyle}"/>
                                    <Button Content="Добавить в корзину" 
                                            Style="{StaticResource RentButtonStyle}"
                                            Click="AddToCart_Click"
                                            Tag="12000"/>
                                </StackPanel>
                            </Border>

                            <!-- Апартаменты -->
                            <Border Style="{StaticResource HousingCardStyle}">
                                <StackPanel>
                                    <Image Source="/Images/apartment.jpg" Height="150" Stretch="UniformToFill"/>
                                    <TextBlock Text="Современные Апартаменты" Style="{StaticResource CardTitleStyle}"/>
                                    <TextBlock Text="Просторные апартаменты с кухней и гостиной" Style="{StaticResource CardDescriptionStyle}"/>
                                    <TextBlock Text="6200 руб./ночь" Style="{StaticResource CardPriceStyle}"/>
                                    <Button Content="Добавить в корзину" 
                                            Style="{StaticResource RentButtonStyle}"
                                            Click="AddToCart_Click"
                                            Tag="6200"/>
                                </StackPanel>
                            </Border>

                            <!-- Коттедж -->
                            <Border Style="{StaticResource HousingCardStyle}">
                                <StackPanel>
                                    <Image Source="/Images/cottage.jpg" Height="150" Stretch="UniformToFill"/>
                                    <TextBlock Text="Просторный Коттедж" Style="{StaticResource CardTitleStyle}"/>
                                    <TextBlock Text="Большой коттедж для компании до 8 человек" Style="{StaticResource CardDescriptionStyle}"/>
                                    <TextBlock Text="18500 руб./ночь" Style="{StaticResource CardPriceStyle}"/>
                                    <Button Content="Добавить в корзину" 
                                            Style="{StaticResource RentButtonStyle}"
                                            Click="AddToCart_Click"
                                            Tag="18500"/>
                                </StackPanel>
                            </Border>
                        </WrapPanel>
                    </ScrollViewer>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Панель корзины -->
        <Border Grid.Column="1" Background="#FF1A1A1A" Padding="15">
            <StackPanel>
                <TextBlock Text="Ваша корзина" 
                           Foreground="White" 
                           FontSize="20" 
                           FontWeight="Bold"
                           Margin="0,0,0,15"/>

                <ListView x:Name="CartListView" 
                          Height="300"
                          Background="Transparent"
                          BorderThickness="0">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{Binding Name}" 
                                               Foreground="White"
                                               FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding Price, StringFormat='{}{0} руб./ночь'}" 
                                               Foreground="#AAAAAA"/>
                                </StackPanel>

                                <Button Grid.Column="1" 
                                        Content="✕" 
                                        Foreground="Red"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Padding="5,0"
                                        Click="RemoveFromCart_Click"
                                        Tag="{Binding Id}"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <Separator Background="#333" Margin="0,10"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Text="Итого: " 
                               Foreground="White"
                               FontSize="16"
                               VerticalAlignment="Center"/>
                    <TextBlock x:Name="TotalPriceText" 
                               Text="0 руб." 
                               Foreground="#FF3A6EA5"
                               FontSize="18"
                               FontWeight="Bold"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <Button x:Name="CheckoutButton"
                        Content="Оформить заявку"
                        Style="{StaticResource RentButtonStyle}"
                        Margin="0,20,0,0"
                        Click="CheckoutButton_Click"/>

                <TextBlock x:Name="StatusText"
                           Text="" 
                           Foreground="#AAAAAA"
                           FontSize="12"
                           Margin="0,10,0,0"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>