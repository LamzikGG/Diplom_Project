<Window x:Class="Diplom_Project.routes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diplom_Project"
        mc:Ignorable="d"
        Title="Трассы" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#FF0F0F0F">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Шапка с логотипом и заголовком -->
        <Border Grid.Row="0" Background="#FF1A1A1A" Padding="15">
            <StackPanel Orientation="Horizontal">
                <Border Width="50" Height="50" CornerRadius="5" Background="White" 
                        MouseLeftButtonDown="Logo_Click" Cursor="Hand">
                    <Image Source="/Image/image (1).jpeg" Stretch="Uniform"/>
                </Border>
                <TextBlock Text="Горнолыжные трассы" 
                          Foreground="White" 
                          FontSize="24" 
                          FontWeight="Bold"
                          Margin="250,0,0,0"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Основное содержимое - блоки с трассами -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20">
                <!-- Трасса 1 -->
                <Border Background="#FF252525" CornerRadius="10" Margin="0,0,0,20" Padding="15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Image Source="/Image/slope1.jpg" Width="120" Height="80" Stretch="UniformToFill" Grid.Column="0"/>

                        <StackPanel Grid.Column="1" Margin="15,0">
                            <TextBlock Text="Чёрная трасса" Foreground="White" FontSize="16" FontWeight="Bold"/>
                            <TextBlock Text="Сложность: Эксперт" Foreground="#FFAAAAAA" Margin="0,5,0,0"/>
                            <TextBlock Text="Длина: 3500м" Foreground="#FFAAAAAA"/>
                            <TextBlock Text="Перепад высот: 850м" Foreground="#FFAAAAAA"/>
                        </StackPanel>

                        <Button Content="Выбрать" Width="100" Height="30" Grid.Column="2" VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- Трасса 2 -->
                <Border Background="#FF252525" CornerRadius="10" Margin="0,0,0,20" Padding="15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Image Source="/Image/slope2.jpg" Width="120" Height="80" Stretch="UniformToFill" Grid.Column="0"/>

                        <StackPanel Grid.Column="1" Margin="15,0">
                            <TextBlock Text="Красная трасса" Foreground="White" FontSize="16" FontWeight="Bold"/>
                            <TextBlock Text="Сложность: Продвинутый" Foreground="#FFAAAAAA" Margin="0,5,0,0"/>
                            <TextBlock Text="Длина: 2800м" Foreground="#FFAAAAAA"/>
                            <TextBlock Text="Перепад высот: 650м" Foreground="#FFAAAAAA"/>
                        </StackPanel>

                        <Button Content="Выбрать" Width="100" Height="30" Grid.Column="2" VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- Трасса 3 -->
                <Border Background="#FF252525" CornerRadius="10" Margin="0,0,0,20" Padding="15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Image Source="/Image/slope3.jpg" Width="120" Height="80" Stretch="UniformToFill" Grid.Column="0"/>

                        <StackPanel Grid.Column="1" Margin="15,0">
                            <TextBlock Text="Синяя трасса" Foreground="White" FontSize="16" FontWeight="Bold"/>
                            <TextBlock Text="Сложность: Средний" Foreground="#FFAAAAAA" Margin="0,5,0,0"/>
                            <TextBlock Text="Длина: 2000м" Foreground="#FFAAAAAA"/>
                            <TextBlock Text="Перепад высот: 450м" Foreground="#FFAAAAAA"/>
                        </StackPanel>

                        <Button Content="Выбрать" Width="100" Height="30" Grid.Column="2" VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- Трасса 4 -->
                <Border Background="#FF252525" CornerRadius="10" Margin="0,0,0,20" Padding="15">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Image Source="/Image/slope4.jpg" Width="120" Height="80" Stretch="UniformToFill" Grid.Column="0"/>

                        <StackPanel Grid.Column="1" Margin="15,0">
                            <TextBlock Text="Зелёная трасса" Foreground="White" FontSize="16" FontWeight="Bold"/>
                            <TextBlock Text="Сложность: Начинающий" Foreground="#FFAAAAAA" Margin="0,5,0,0"/>
                            <TextBlock Text="Длина: 1500м" Foreground="#FFAAAAAA"/>
                            <TextBlock Text="Перепад высот: 250м" Foreground="#FFAAAAAA"/>
                        </StackPanel>

                        <Button Content="Выбрать" Width="100" Height="30" Grid.Column="2" VerticalAlignment="Center"/>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>