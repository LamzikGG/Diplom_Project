<Window x:Class="Diplom_Project.arenda_ekipa"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diplom_Project"
        mc:Ignorable="d"
        Title="Аренда экипировки" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#FF0F0F0F">
        <Grid.Resources>
            <!-- Стиль для кнопок с изображениями -->
            <Style x:Key="ImageButtonStyle" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="0"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    CornerRadius="4">
                                <ContentPresenter Content="{TemplateBinding Content}"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Opacity" Value="0.8"/>
                    </Trigger>
                    <Trigger Property="IsPressed" Value="True">
                        <Setter Property="Opacity" Value="0.6"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- Стиль для карточек экипировки -->
            <Style x:Key="EquipmentCardStyle" TargetType="Border">
                <Setter Property="Background" Value="#FF1A1A1A"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Padding" Value="10"/>
                <Setter Property="Margin" Value="10"/>
                <Setter Property="Width" Value="180"/>
                <Setter Property="Height" Value="220"/>
            </Style>

            <!-- Стиль для текста в карточках -->
            <Style x:Key="EquipmentTextStyle" TargetType="TextBlock">
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="TextWrapping" Value="Wrap"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="Margin" Value="0,5,0,0"/>
            </Style>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Шапка с логотипом и заголовком -->
        <Border Grid.Row="0" Background="#FF1A1A1A" Padding="15">
            <StackPanel Orientation="Horizontal">
                <Border Width="50" Height="50" CornerRadius="5" Background="White" 
     MouseLeftButtonDown="Logo_Click" Cursor="Hand">
                    <Image Source="/Image/image (1).jpeg" Stretch="Uniform"/>
                </Border>
                <TextBlock Text="Аренда жилья" 
       Foreground="White" 
       FontSize="24" 
       FontWeight="Bold"
       Margin="250,0,0,0"
       VerticalAlignment="Center"
       HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Основной контент - список экипировки -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <WrapPanel HorizontalAlignment="Center" Margin="10">
                <!-- Карточка лыж -->
                <Border Style="{StaticResource EquipmentCardStyle}">
                    <StackPanel>
                        <Image Source="/Image/ski.png" Height="100" Stretch="Uniform"/>
                        <TextBlock Text="Горные лыжи" Style="{StaticResource EquipmentTextStyle}"/>
                        <TextBlock Text="1500 руб./день" Style="{StaticResource EquipmentTextStyle}"/>
                        <Button Content="Арендовать" Margin="0,10,0,0" Padding="5" 
                                Background="#FF3A3A3A" Foreground="White"/>
                    </StackPanel>
                </Border>

                <!-- Карточка сноуборда -->
                <Border Style="{StaticResource EquipmentCardStyle}">
                    <StackPanel>
                        <Image Source="/Image/snowboard.png" Height="100" Stretch="Uniform"/>
                        <TextBlock Text="Сноуборд" Style="{StaticResource EquipmentTextStyle}"/>
                        <TextBlock Text="1700 руб./день" Style="{StaticResource EquipmentTextStyle}"/>
                        <Button Content="Арендовать" Margin="0,10,0,0" Padding="5" 
                                Background="#FF3A3A3A" Foreground="White"/>
                    </StackPanel>
                </Border>

                <!-- Карточка ботинок -->
                <Border Style="{StaticResource EquipmentCardStyle}">
                    <StackPanel>
                        <Image Source="/Image/boots.png" Height="100" Stretch="Uniform"/>
                        <TextBlock Text="Ботинки" Style="{StaticResource EquipmentTextStyle}"/>
                        <TextBlock Text="800 руб./день" Style="{StaticResource EquipmentTextStyle}"/>
                        <Button Content="Арендовать" Margin="0,10,0,0" Padding="5" 
                                Background="#FF3A3A3A" Foreground="White"/>
                    </StackPanel>
                </Border>

                <!-- Карточка шлема -->
                <Border Style="{StaticResource EquipmentCardStyle}">
                    <StackPanel>
                        <Image Source="/Image/helmet.png" Height="100" Stretch="Uniform"/>
                        <TextBlock Text="Шлем" Style="{StaticResource EquipmentTextStyle}"/>
                        <TextBlock Text="500 руб./день" Style="{StaticResource EquipmentTextStyle}"/>
                        <Button Content="Арендовать" Margin="0,10,0,0" Padding="5" 
                                Background="#FF3A3A3A" Foreground="White"/>
                    </StackPanel>
                </Border>

                <!-- Карточка палок -->
                <Border Style="{StaticResource EquipmentCardStyle}">
                    <StackPanel>
                        <Image Source="/Image/poles.png" Height="100" Stretch="Uniform"/>
                        <TextBlock Text="Лыжные палки" Style="{StaticResource EquipmentTextStyle}"/>
                        <TextBlock Text="400 руб./день" Style="{StaticResource EquipmentTextStyle}"/>
                        <Button Content="Арендовать" Margin="0,10,0,0" Padding="5" 
                                Background="#FF3A3A3A" Foreground="White"/>
                    </StackPanel>
                </Border>

                <!-- Карточка очков -->
                <Border Style="{StaticResource EquipmentCardStyle}">
                    <StackPanel>
                        <Image Source="/Image/goggles.png" Height="100" Stretch="Uniform"/>
                        <TextBlock Text="Горнолыжные очки" Style="{StaticResource EquipmentTextStyle}"/>
                        <TextBlock Text="600 руб./день" Style="{StaticResource EquipmentTextStyle}"/>
                        <Button Content="Арендовать" Margin="0,10,0,0" Padding="5" 
                                Background="#FF3A3A3A" Foreground="White"/>
                    </StackPanel>
                </Border>
            </WrapPanel>
        </ScrollViewer>

        <!-- Подвал с кнопкой подтверждения -->
        <Border Grid.Row="2" Background="#FF1A1A1A" Padding="10">
            <Button Content="Подтвердить аренду" 
                    HorizontalAlignment="Right" 
                    Padding="20,5" 
                    Background="#FF3A3A3A" 
                    Foreground="White"
                    FontWeight="Bold"/>
        </Border>
    </Grid>
</Window>