<Window x:Class="Diplom_Project.arenda_ekipa"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Аренда экипировки" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#FF0F0F0F">
        <Grid.Resources>
            <!-- Стиль для карточек экипировки -->
            <Style x:Key="EquipmentCardStyle" TargetType="Border">
                <Setter Property="Background" Value="#FF1A1A1A"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Padding" Value="10"/>
                <Setter Property="Margin" Value="10"/>
                <Setter Property="Width" Value="180"/>
                <Setter Property="Height" Value="220"/>
            </Style>
            <!-- Стиль для текста в карточках -->
            <Style x:Key="EquipmentTextStyle" TargetType="TextBlock">
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="TextWrapping" Value="Wrap"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="Margin" Value="0,5,0,0"/>
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Выберите экипировку для аренды" 
                   HorizontalAlignment="Center" FontSize="18" Foreground="White" Margin="10"/>

        <!-- Основной контент - список экипировки -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <WrapPanel x:Name="EquipmentWrapPanel" HorizontalAlignment="Center" Margin="10"/>
        </ScrollViewer>

        <!-- Подвал с кнопкой подтверждения -->
        <Border Grid.Row="2" Background="#FF1A1A1A" Padding="10">
            <Button Content="Подтвердить аренду" 
                    HorizontalAlignment="Right" 
                    Padding="20,5" 
                    Background="#FF3A3A3A" 
                    Foreground="White"
                    FontWeight="Bold"/>
        </Border>
    </Grid>
</Window>